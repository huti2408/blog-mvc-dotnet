@model BlogMVC.Models.User
@{
    Layout = "Auth";
}
@{
    ViewData["Title"] = "Login";
}


<div class="m-auto ">
<form asp-action="Login" class="d-flex flex-column align-items-center justify-content-center p-5 bg-light" style="border:1px solid #ccc; border-radius:10px">
    <h2>Login</h2>
    <div class="d-flex align-items-center mt-3">
        <label style="width:100px" class="me-1">Username:</label>
        <input type="text" asp-for="Username" class="form-control" style="width:auto" />
    </div>
    <div class="d-flex align-items-center mt-3">
        <label style="width:100px" class="me-1">Password:</label>
        <input type="password" asp-for="Password" class="form-control" style="width:auto" />
    </div>
    <button class="btn btn-primary mt-3" type="submit">Login</button>
    <a class="nav-link text-info" asp-area="" asp-controller="Blogs" asp-action="index">Back to Home</a>
    <a class="nav-link text-info" asp-action="Register">Don't have an account yet ? Register</a>


</form>
</div>
